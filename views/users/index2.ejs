<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Destinasi Wisata</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <style>
      /* Custom styles */
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .navbar-brand {
        font-family: 'Poppins', sans-serif;
        font-size: 1.5rem;
        font-weight: bold;
      }
      .card {
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: scale(1.05);
      }
      .btn-custom-package {
        transition: transform 0.3s, background-color 0.3s;
      }
      .btn-custom-package:hover {
        transform: scale(1.1);
      }
      .loading-spinner {
        position: fixed;
        left: 50%;
        top: 50%;
        z-index: 1000;
        width: 3rem;
        height: 3rem;
        margin-left: -1.5rem;
        margin-top: -1.5rem;
        border: 0.4em solid rgba(0, 0, 0, 0.2);
        border-left-color: #000;
        border-radius: 50%;
        animation: spinner 0.6s linear infinite;
      }
      @keyframes spinner {
        to {
          transform: rotate(360deg);
        }
      }
      main {
        flex: 1;
      }
      footer {
        width: 100%;
        position: relative;
        bottom: 0;
        background-color: #343a40;
        color: white;
      }
    </style>
  </head>
  <body>
    <!-- Loading Spinner -->
    <div class="loading-spinner" id="loadingSpinner"></div>

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand">Madutour</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4"></ul>
          <!-- Custom Package Button -->
          <form class="d-flex">
            <a class="btn btn-outline-dark me-2 btn-custom-package" href="/nota">
              <i class="bi bi-basket-fill me-1"></i>
              Pesanan
            </a>
          </form>
          <form class="d-flex">
            <a class="btn btn-outline-dark me-2 btn-custom-package" href="../custom/create">
              <i class="bi bi-pencil-square me-1"></i>
              Custom Paket
            </a>
          </form>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <!-- Product section-->
      <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
          <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% for(var i = 0; i < data_kategori.length; i++){ %>
            <div class="col mb-5">
              <div class="card h-100">
                <!-- Product details-->
                <div class="card-body p-4">
                  <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder"><%= data_kategori[i].nama_kategori %></h5>
                  </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                  <div class="text-center">
                    <!-- Link to detail page -->
                    <a href="/users/paket/<%= data_kategori[i].id_kategori %>" class="btn btn-secondary">
                      Lihat Paket
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer-->
    <footer class="py-5">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p>
      </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <script>
      // Hide loading spinner when page is fully loaded
      window.addEventListener("load", () => {
        const loadingSpinner = document.getElementById("loadingSpinner");
        loadingSpinner.style.display = "none";
      });

      // Smooth scroll for internal links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          document.querySelector(this.getAttribute("href")).scrollIntoView({
            behavior: "smooth"
          });
        });
      });
    </script>
  </body>
</html>
