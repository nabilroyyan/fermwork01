<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Destinasi Wisata</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <style>
      html,
      body {
        height: 100%;
      }
      body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      main {
        flex: 1;
      }
      footer {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 1rem;
        margin-top: auto;
      }
      .form-container {
        max-width: 500px;
        margin: auto;
      }
    </style>
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand">Madutour</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4"></ul>
        </div>
      </div>
    </nav>
    <!-- Product section-->

    <!-- Related items section-->
    <div class="content-page py-3 px-4 container mt-5 form-container">
      <div class="content">
        <div class="container-fluid">
          <form
            action="/boking/store"
            method="POST"
            enctype="multipart/form-data"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="tanggal">Tanggal</label>
              <input
                type="date"
                class="form-control"
                id="tanggal"
                name="tanggal"
                placeholder="Tanggal"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please select a date.</div>
            </div>
            <div class="mb-3">
              <label for="id_menu" class="form-label">menu:</label>
              <select name="id_menu" id="id_menu" class="form-select" required>
                <option value="" disabled selected>Pilih menu</option>
                <% datamenu.forEach(datamenu => { %>
                <option value="<%= datamenu.id_menu %>">
                  <%= datamenu.nama_menu %>
                </option>
                <% }); %>
              </select>
            </div>
            <div class="mb-3" hidden>
              <label for="id_paket" class="form-label">Deskripsi</label>
              <textarea
                class="form-control"
                id="id_paket"
                name="id_paket"
                rows="3"
                required
              >
<%= paket.id_paket %></textarea
              >
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a description.</div>
            </div>
            <div class="mb-3" hidden>
              <label for="id_akun" class="form-label">Deskripsi</label>
              <textarea
                class="form-control"
                id="id_akun"
                name="id_akun"
                rows="3"
                required
              >
<%= id %></textarea
              >
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please provide a description.</div>
            </div>
            <div class="mb-3" hidden>
              <label for="status" class="form-label">Status</label>
              <select class="form-control" name="status" id="status">
                <option value="proses" selected>Select User Level</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label" for="bukti">Bukti Pembayaran</label>
              <input
                type="file"
                class="form-control"
                id="bukti"
                name="bukti"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please upload a payment proof.</div>
            </div>
            <button class="btn btn-primary" type="submit">Submit form</button>
          </form>
        </div>
      </div>
    </div>
    <!-- Related items section-->
    <footer class="py-3 bg-dark mt-auto">
      <div class="container">
        <p class="m-0 text-center text-white">
          Copyright &copy; Your Website 2023
        </p>
      </div>
    </footer>
    <!-- Footer-->

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
